{{#foreach posts}}
  <li class="post-stub {{post_class}}" >
    <a class="js-ajax-link"  title="{{title}} | {{@blog.title}}" href="{{url}}">
      <h2 class="post-stub-title">{{title}}</h2>
    </a>
    <p>{{excerpt words="150"}}</p>
    <span class="post-stub-author">{{author}}</span>
    <time class="post-stub-date" datetime="{{published_at}}">{{date format="MMMM DD, YYYY"}}</time>
    {{#if tags}}
      <span class="post-stub-tag">{{tags}}</span>
    {{/if}}
    {{#if featured}}
      <span class="post-stub-tag">Featured</span>
    {{/if}}
  </li>
{{/foreach}}
